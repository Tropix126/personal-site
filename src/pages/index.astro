<style>
	main {
		display: flex;
		height: 100%;
		min-height: 0;
		overflow: hidden;
	}

	aside {
		display: flex;
		flex-direction: column;
		flex: 1.25;
	}

	article {
		overflow: auto;
		flex: 1;
		padding: 24px;
		border-inline-start: 1px solid hsl(var(--background-tertiary));
	}

	section {
		padding-inline: clamp(32px, min(8vh, 4vw), 64px);
		padding-block: clamp(24px, 5vh, 48px);
		display: flex;
		flex-direction: column;
		gap: 4.5vh;
	}

	section span {
        animation: slide 250ms ease backwards 150ms;
		text-transform: uppercase;
		color: hsl(var(--accent-primary));
		font-size: 14px;
		font-weight: 400;
	}

	section.top {
		border-bottom: 1px solid hsl(var(--background-tertiary));
	}

	section.bottom {
		overflow: auto;
		flex: 1 1 auto;
		justify-content: space-between;
	}

	h1 {
        animation: slide 250ms ease backwards 100ms;
		font-size: clamp(96px, min(16vh, 5vw), 128px);
		font-family: var(--font-display);
		font-weight: 400;
		margin: 0;
	}

	p {
        animation: slide 250ms ease backwards 250ms;
		line-height: 2;
		font-size: 14px;
	}

	p a {
		color: hsl(var(--accent-primary));
		text-decoration: none;
		transition: 150ms ease;
		border-bottom: 1px solid;
	}

	p a:active {
		opacity: 0.8;
	}

	.buttons {
		display: flex;
		gap: 16px;
	}

	.buttons a {
		width: clamp(48px, 11vh, 72px);
		height: clamp(48px, 11vh, 72px);
		border-radius: 50%;
		border: none;
		color: hsl(var(--foreground-secondary));
		transition: 150ms ease;
		background: hsl(var(--background-secondary));
		position: relative;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
        animation: slide 250ms ease calc(350ms + var(--animation-stagger-delay)) backwards;
	}

	.buttons a:active {
		background-color: hsl(var(--background-tertiary));
	}

	.buttons a svg {
		width: 20px;
		height: auto;
	}

	article h1 {
		animation-delay: 250ms;
		font-family: var(--font-monospace);
		text-transform: uppercase;
		color: hsl(var(--foreground-secondary));
		font-size: 14px;
		font-weight: 400;
		margin-block-end: 24px;
	}

	@media screen and (max-width: 1080px) {
		:global(body), main {
			height: auto;
		}

		main {
			flex-direction: column;
			overflow: visible;
		}

		article {
			border-left: none;
			border-top: 1px solid hsl(var(--background-tertiary));
		}

		h1 {
			font-size: clamp(64px, min(16vh, 5vw), 128px);
		}
	}
</style>
